{
    "name": "meander",
    "displayName": "Meander",
    "description": "My Stuff",
    "version": "1.0.0",
    "publisher": "meander",
    "engines": {
        "vscode": "^1.100.0"
    },
    "categories": [
        "Other"
    ],
    "main": "extension.js",
    "type": "module",
    "activationEvents": [
        "onStartupFinished"
    ],
    "contributes": {
        "themes": [
            {
                "label": "Meander",
                "uiTheme": "vs-dark",
                "path": "./themes/color-theme.json"
            }
        ],
        "commands": [
            { "command": "meander.debug_and_run", "category": "Rad Debugger", "title": "Start Debugging" },
            { "command": "meander.open_debug",    "category": "Rad Debugger", "title": "Open Debugger" },
            { "command": "meander.toggle_math",   "category": "Inline Math",  "title": "Toggle showing calculations" },
            { "command": "meander.check_math",    "category": "Inline Math",  "title": "Are calculations being show?" }
        ],
        "keybindings": [
            { "command": "meander.debug_and_run", "key": "F5" },
            { "command": "meander.open_debug",    "key": "F6" },
            
            { "command": "meander.toggle_math",   "key": "Ctrl+Shift+o", "when": "editorTextFocus" }
        ]
        
    }
}